  </section>

<!-- Login modal-->
<div id="loginModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"> Log in</h4>
      </div>
      <div class="modal-body">
        <form action="/login" method="post">
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
          </div>

          <button type="submit" class="btn btn-warning btn-lg">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!--Sign up modal-->
<div id="signupModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"> Sign up</h4>
      </div>
      <div class="modal-body">
        <form action="/signup" method="post">
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
          </div>

          <button type="submit" class="btn btn-warning btn-lg">Signup</button>
        </form>
      </div>
    </div>
  </div>
</div>

  <script>
//vue



  Vue.component('bar', {
    props: ['data'],
    template: "<div ><span><img class='resultimg' :src='data.image_url'></span><span class='textsp'><a :href='data.url'><h2>${data.name}<img :src='data.rating_img_url_small'></h2></a><p id='snippet'> ${data.snippet_text} </p><p v-if='data.is_closed==false'>Open now</p></span><span><p>${data.going} going</p><button v-on:click='respond(data)'>RSVP</button></span></div>",
    delimiters: ['${', '}'],
    methods: {
    respond(business){
      this.$emit('respond', business)
    }
  },
  })

  new Vue({
    el: '#root',
    delimiters: ['${', '}'],
    data: function() {return {
      location: "",
      businesses: [],
      ok: false,
    }
    },
    methods: {
      searchLocation(){
        var address = "/search/?location="+this.location;
        var vm=this;
        //API call to yelp
        this.$http.get(address)
          .then(function(data){
            this.businesses=data.body.businesses;
            var bars=[]
            var ids=[]
            //Check which bars are in the database, i.e someone RSVPed
            this.$http.get("/bars")
            .then(function(result){
              console.log(result)
              bars=result.body;
              result.body.forEach(function(item){
                ids.push(item.yelpid)
              })
            })
            //Count how many people are going to each bar, if any
            .then(function(){
              b=this.businesses
              b.forEach(function(item, index){
                var id=ids.indexOf(item.id);
                if(id==-1){
                  g=0
                }
                else{
                  g=bars[id].answers.length
                }

                //update the data
                var newObject = Object.assign({}, vm.businesses[index], {going: g});
                vm.$set(vm.businesses, index, newObject);
              });

            });
          });

            this.ok=true

      },
      //RSVP
      respond(business){
        var vm=this;
        var address="/bars/" + business.id;
        var index=vm.businesses.indexOf(business)
        this.$http.post(address)
        .then(function(result){
          //Needs to be this complicated, because businesses is an array
          var newObject = Object.assign({}, vm.businesses[index], {going: result.body.answers.length});
          vm.$set(vm.businesses, index, newObject);
        });
      }
    },


  });

  </script>

</body>
</html>
