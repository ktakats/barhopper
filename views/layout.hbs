  <section id="intro" class="intro-section">
           <div class="container">
               <div class="row">
                   <div class="col-lg-12" id="root" >
                     <input v-model="location">
                     <button @click="searchLocation">Search</button>
                     <bar v-if="ok" v-for="business in businesses" :key="business.id" class="searchResult" :data="business" v-on:respond="respond">
                      <!--
                      <div>
                        <span>
                          <img class="resultimg" :src="business.image_url">
                        </span>
                        <span class="textsp">
                          <a :href="business.url"><h2>${business.name}
                            <img :src="business.rating_img_url_small"></h2>
                          </a>
                          <p id="snippet">" ${business.snippet_text} "</p>
                          <p v-if="business.is_closed==false">Open now</p>
                        </span>
                        <span><p>${business.going} going</p>
                          <button @click="respond(business)">RSVP</button>
                        </span>
                      </div>
                    -->
